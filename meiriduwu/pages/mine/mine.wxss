/* pages/mine/mine.wxss */

.userinfo {
    width: 100%;
    height: 200rpx;
    background: #1296db;
    display: flex;
    align-items: center;
  }
  
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
    border:4rpx solid #fff;
  }
  .userinfo-nickname {
    color: #333;
    font-size: 40rpx;
  }
  
.text-top{

    width: 100%;
    height: 100rpx;
   
    display: flex;
    align-items: center;
    justify-content: space-around
}
.text-top > image{
    width: 50rpx;
    height: 50rpx;
}
.text-top > text{
  width: 70%;
  height: 100rpx;
  line-height: 35rpx;
  font-size: 30rpx;
  color:#aaa;
  border-bottom: 2rpx solid #eee;
}